{
    "appenders": [
        {
            "type": "file",
            "filename": "./logs/${opts:serverId}.log",
            "fileSize": 1048576,
            "layout": {
                "type": "basic"
            }, 
            "backups": 5
        }
    ],

    "levels": {
        "[all]": "DEBUG"
    },

    "replaceConsole": true,
    "lineDebug": false,
    "reloadSecs": 1
}
