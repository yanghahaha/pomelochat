{
    "appenders": [
        {
            "type": "file",
            "filename": "./logs/${opts:serverId}.log",
            "fileSize": 10485760,
            "layout": {
                "type": "basic"
            }, 
            "backups": 5
        },
        {
            "type": "dateFile",
            "filename": "./logs/channel", 
            "layout": {
                "type": "basic"
            },
            "category":"channel",
            "alwaysIncludePattern": true
        },
        {
            "type": "file",
            "filename": "./logs/con-log.log", 
            "pattern": "connector", 
            "fileSize": 10485760,
            "layout": {
                "type": "basic"
            },
            "backups": 5,
            "category":"con-log"
        },
        {
            "type": "file",
            "filename": "./logs/rpc-log.log",
            "fileSize": 10485760,
            "layout": {
                "type": "basic"
            },
            "backups": 5,
            "category":"rpc-log"
        },
        {
            "type": "file",
            "filename": "./logs/forward-log.log",
            "fileSize": 10485760,
            "layout": {
                "type": "basic"
            },
            "backups": 5,
            "category":"forward-log"
        },
        {
            "type": "file",
            "filename": "./logs/crash.log",
            "fileSize": 10485760,
            "layout": {
                "type": "basic"
            },
            "backups": 5,
            "category":"crash-log"
        },
        {
            "type": "console"
        }
    ],

    "levels": {
        "[all]": "DEBUG",
        "rpc-log": "ERROR",
        "forward-log": "ERROR"
    },

    "replaceConsole": true,
    "lineDebug": false,
    "reloadSecs": 1
}
